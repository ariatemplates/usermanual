mixin version(version, latest)
    -latest = latest || false
    -var label = version
    -var value = version
    if latest
        -label = "latest (" + version + ")"
        -version = "latest"
    if label.indexOf(metadata.version) != -1
        option(selected, value=version) #{label}
    else
        option(value=version) #{label}

